{
  "info": {
    "name": "Buildafeature API",
    "description": "Auth and Challenges API. Use the Local environment; run Login or Signup to get cookies for protected routes.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:4000" }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health check",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/health",
            "description": "Server health check."
          }
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Signup - Send OTP",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"phone\": \"\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/signup/send-otp",
            "description": "Send OTP to email for signup. Phone optional."
          }
        },
        {
          "name": "Signup - Verify OTP",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"otp\": \"123456\",\n  \"password\": \"password123\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/signup/verify-otp",
            "description": "Verify OTP and set password. Creates account and logs in (sets auth cookie)."
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/login",
            "description": "Login with email and password. Sets HTTP-only auth cookie; use same domain in Postman to send cookie on protected requests."
          }
        },
        {
          "name": "Get current user (me)",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/auth/me",
            "description": "Protected. Returns current user; requires auth cookie from login/signup."
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [],
            "url": "{{baseUrl}}/api/auth/logout",
            "description": "Protected. Clears auth cookie."
          }
        }
      ]
    },
    {
      "name": "Challenges",
      "item": [
        {
          "name": "List live (public)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/challenges/live?difficulty=&type=",
              "host": ["{{baseUrl}}"],
              "path": ["api", "challenges", "live"],
              "query": [
                { "key": "difficulty", "value": "", "disabled": true },
                { "key": "type", "value": "", "disabled": true }
              ]
            },
            "description": "Public. List challenges with status=live. Optional: difficulty, type."
          }
        },
        {
          "name": "Get challenge by id or slug (public)",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/challenges/smart-search-with-debounce",
            "description": "Public. Get single challenge by _id or slug."
          }
        },
        {
          "name": "List all (protected)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/challenges?status=&difficulty=&type=&limit=20&skip=0",
              "host": ["{{baseUrl}}"],
              "path": ["api", "challenges"],
              "query": [
                { "key": "status", "value": "" },
                { "key": "difficulty", "value": "" },
                { "key": "type", "value": "" },
                { "key": "limit", "value": "20" },
                { "key": "skip", "value": "0" }
              ]
            },
            "description": "Protected. List all challenges with filters. Optional: status, difficulty, type, limit, skip."
          }
        },
        {
          "name": "Create challenge (protected)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"slug\": \"my-challenge\",\n  \"status\": \"draft\",\n  \"name\": \"My Challenge\",\n  \"description\": \"Short description of the challenge.\",\n  \"difficulty\": \"easy\",\n  \"timeAllowed\": 15,\n  \"type\": \"free\",\n  \"thumbnailUrl\": \"\",\n  \"tags\": [\"react\"],\n  \"compulsoryFeatures\": [\"Feature one\"],\n  \"niceToHaveFeatures\": [\"Nice one\"],\n  \"templatePath\": \"/challenges/my-challenge/template\",\n  \"aiPromptPath\": \"/challenges/my-challenge/ai.prompt.txt\",\n  \"scoringConfigPath\": \"/challenges/my-challenge/scoring.json\",\n  \"testPath\": \"/challenges/my-challenge/tests\"\n}"
            },
            "url": "{{baseUrl}}/api/challenges",
            "description": "Protected. Create challenge. Slug optional (defaults to cleaned name). Updates DB and challenges/index.json."
          }
        },
        {
          "name": "Update challenge (protected)",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated name\",\n  \"status\": \"live\"\n}"
            },
            "url": "{{baseUrl}}/api/challenges/:id",
            "description": "Protected. Partial update by challenge _id."
          }
        },
        {
          "name": "Delete challenge (protected)",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": "{{baseUrl}}/api/challenges/:id",
            "description": "Protected. Delete by challenge _id."
          }
        }
      ]
    }
  ]
}
